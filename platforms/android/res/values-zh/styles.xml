<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="CustomDialog" parent="@android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/dialog_background</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="Top_In_Top_Out_Anim_Style">
        <item name="android:windowEnterAnimation">@anim/push_top_in</item>
        <item name="android:windowExitAnimation">@anim/push_top_out</item>
    </style>
      <style name="Amplification_In_Shrink_Out_Anim_Style">
        <item name="android:windowEnterAnimation">@anim/amplification_in</item>
        <item name="android:windowExitAnimation">@anim/shrink_out</item>
    </style>

</resources>
